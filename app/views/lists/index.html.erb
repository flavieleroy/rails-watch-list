<h1>My lists</h1>

<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <%= link_to 'Create a movie list', new_list_path, class: 'btn btn-primary' %>
  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="co-12 colsm-6 col-md-4">
        <%= link_to list_path(list) do %>
          <div class="card">
            <div class="d-flex align-items-end justify-content-between p-2">
              <%= list.name %>
              <%= link_to list_path(list), method: :delete, data: { confirm: 'Do you want to delete this list?' }, class: 'card-remove' do %>
                <i class="fas fa-times"></i>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
